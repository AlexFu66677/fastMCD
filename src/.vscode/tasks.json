{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "-O3",
                "${fileDirname}/*.cpp", 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I","${workspaceFolder}/",
                "-I","/usr/local/include/",
                "-I","/usr/local/include/opencv2/",
                "-I","/usr/local/cuda-11.8/include/CL/",
                "-I","/usr/local/cuda-11.8/include/",
                "-L", "/usr/local/lib",
                "-l","OpenCL",
                "-l","jsoncpp",
                "/usr/local/lib/libopencv_*"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}